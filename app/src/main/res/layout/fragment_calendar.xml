<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/bannerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/banner_background">

        <TextView
            android:id="@+id/apartmentNameTextView"
            android:text="Apartment Name"
            android:textColor="@color/banner_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/addressBuildingTextView"
            android:text="123 Postal Ave"
            android:textColor="@color/banner_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="start"/>

        <TextView
            android:id="@+id/addressCityTextView"
            android:text="Ann Arbor"
            android:textColor="@color/banner_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="40dp"
            android:layout_height="300dp"
            android:layout_gravity="left"
            android:text="@string/previous_month"
            android:background="@android:color/transparent"
            android:id="@+id/prevMonthButton" />

        <CalendarView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:showWeekNumber="false"
            android:id="@+id/calendarView" />

        <Button
            android:layout_width="40dp"
            android:layout_height="300dp"
            android:layout_gravity="right"
            android:text="@string/next_month"
            android:background="@android:color/transparent"
            android:id="@+id/nextMonthButton" />

    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

</LinearLayout>